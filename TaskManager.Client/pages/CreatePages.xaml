<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.Client.pages.CreatePages">
   <StackLayout>
       <StackLayout Orientation="Horizontal" Padding="10">
           
           <Label HorizontalOptions="Center">Task</Label>
           
           <Picker Margin="10"  ItemDisplayBinding="{Binding Name}" x:Name="Picker">
           </Picker>
           
       </StackLayout>
       
       
       <Editor x:Name="Text" HeightRequest="100" WidthRequest="150" ></Editor>
       <Button Clicked="AddItem" Text="Add" WidthRequest="100" x:Name="Button"  />
       
       
   </StackLayout>
      
</ContentPage>