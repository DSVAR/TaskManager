<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.Client.pages.EnterPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10">
           
      
            <Entry Margin="10" Placeholder = "login"  x:Name="Login"/>
         
            <Entry Placeholder = "Password" IsPassword="True" Margin="10"  x:Name="Password"/>
            
            <Button Clicked="Auth" Text="Entry" WidthRequest="100" x:Name="Button"  />
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>