<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskManager.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskManager.Client"
    xmlns:pagesView="clr-namespace:TaskManager.Client.pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent x:Name="Entry"  Title="Entry" ContentTemplate="{DataTemplate pagesView:EnterPage}" Route="Entry"/>
    
    <TabBar Route="Main">
        <Tab Title="Create">
            <ShellContent
                Title="Create"
                ContentTemplate="{DataTemplate pagesView:CreatePages}"
                Route="CreatePage" />
        </Tab>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Notifications">
            <ShellContent
                Title="Notifications"
                ContentTemplate="{DataTemplate pagesView:NotificationsView}"
                Route="Notifications" />
        </Tab>
       
        
    </TabBar>
    
   
   


</Shell>